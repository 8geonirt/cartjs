{% assign page = pages.frontpage %}

<section class="jumbotron jumbotron-primary">
  <div class="container text-center">

    <p class="lead">
      A Javascript library to power cart management for Shopify themes.
    </p>

    <p>
      <a href="#" class="btn btn-lg btn-primary">Download</a>
    </p>

  </div>
</section>

<section class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-1">
      <table class="table table-bordered table-condensed table-striped">
        <thead>
          <tr>
            <th>Item</th>
            <th class="text-right">Price</th>
            <th class="text-center">Qty</th>
            <th class="text-right">Line Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody data-cart-view>
          <tr rv-each-item="cart.items">
            <td>
              <h5 rv-text="item.title"></h5>
              <ul class="small">
                <li rv-each-property="item.propertyArray < properties"><strong rv-text="property.name"></strong>: <span rv-text="property.value"></span></li>
              </ul>
            </td>
            <td rv-text="item.price | money" class="text-right"></td>
            <td rv-text="item.quantity" class="text-center"></td>
            <td rv-text="item.line_price | money" class="text-right"></td>
            <td class="text-center"><a href="#" class="close" rv-data-cart-remove="index | plus 1">&times;</a></td>
          </tr>
          <tr rv-show="cart.item_count | lt 1">
            <td colspan="5" class="text-center">You don't have any items in your cart.</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      {% for product in collections.frontpage.products %}
      <div class="form-group">
        <button class="btn btn-default btn-small" data-cart-add="{{ product.variants.first.id }}">Add a {{ product.title | escape }}</button>
      </div>
      {% endfor %}
    </div>
  </div>

</section>